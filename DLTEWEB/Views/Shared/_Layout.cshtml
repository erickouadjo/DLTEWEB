@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Sidebar et Contenu</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #343A40;
        }

        .sidebar ul {
            list-style-type: none;
        }

        .sidebar ul li {
            margin: 15px 0;
        }

        .sidebar ul li a {
            color: white;
            text-decoration: none;
            font-size: 18px;
        }

        .content {
            flex: 1;
            padding: 20px;
            background-color: #ecf0f1;
        }

        h1 {
            margin-bottom: 20px;
        }

        .sidebar-nav li {
            text-indent: 20px;
            line-height: 40px;
        }

        .sidebar-nav li a {
            display: block;
            text-decoration: none;
            color: #999999;
        }

        .sidebar-nav li a:hover {
            text-decoration: none;
            color: #fff;
            background: #279B3E;
        }

        .sidebar-nav li a:active,
        .sidebar-nav li a:focus {
            text-decoration: none;
        }

        @@media(min-width:768px) {
            #wrapper {
                padding-left: 250px;
            }

                #wrapper.toggled {
                    padding-left: 0;
                }

            #sidebar-wrapper {
                width: 250px;
            }

            #wrapper.toggled #sidebar-wrapper {
                width: 0;
            }

            #page-content-wrapper {
                padding: 20px;
                position: relative;
            }

            #wrapper.toggled #page-content-wrapper {
                position: relative;
                margin-right: 0;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="@Url.Action("Index", "Home")">
                        Accueil
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "TableauBord")">Tableau de bord</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "CollecteDonnees")">Collecte de données</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Communication")">Communication</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Cartographie")">Cartographie</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "SuiviEvaluation")">Suivi-Evaluation</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "TraitementAlerte")">Traitements et alertes</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Administration")">Administration</a>
                </li>
            </ul>
        </aside>

        <div class="content">

            @RenderBody()
        </div>
    </div>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>

